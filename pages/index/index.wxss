
.swiper-item{
    display: block;
    height: 150px;
}

.swiper-item image{
    width: 100%;
    display: block;
}

.swiper-item text{
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,.4);
    color: #ffffff;
    text-align: center;
    font-size: 29rpx;
    padding: 20rpx;
}

.posts-list {
  margin-top: 10px;
}
.posts-item {
  position: relative;
  padding: 10px 0 10px 10px;
  font-size: 14px;
  padding-right: 10px;
  background: #fff;
  border-bottom: 1px solid #f0f0f0;
}
.author {
  overflow: hidden;
  padding-bottom: 5px;
}
.author-avatar {
  width: 30px;
  height: 30px;
  border-radius: 3px;
  float: left;
}
.author-name {
  color: #666;
  float: left;
  line-height:30px;
  margin-left:5px;
  font-size: 12px;
}
.posts-tag {
  background: #fff;
  border: 1px #80bd01 solid;
  padding: 2px 4px;
  border-radius: 3px;
  color: #80bd01;
  font-size: 12px;
  float: left;
  margin:6px 0px 8px 5px;
}
.hot {
  border: 1px #e25242 solid;
  color: #e25242;
}
.posts-last-reply {
  float: right;
  line-height:30px;
  color: #666;
  font-size: 12px;
}

.bar-info {
  overflow: hidden;
  height:14px;
}
.bar-info-item {
  float: right;
  line-height:14px;
  margin-left: 5px;
}
.bar-info-item-icon {
  width: 12px;
  height: 12px;
  vertical-align:middle;
  margin-right: 2px;
}
.bar-info-item-number {
  display:inline-block;
  color: #999;
  font-size: 12px;
  line-height:14px;
  vertical-align:middle;
}

